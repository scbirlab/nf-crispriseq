manifest {

    author          = "Eachan O. Johnson"
    homePage        = "https://github.com/scbirlab/nf-crispriseq"
    description     = "Calculate fitness from massive competition experiments using CRISPRi-seq."
    defaultBranch   = "main"
    nextflowVersion = '!>=23.10.0'
    version         = "0.0.1"
    doi             = ''

}

nextflow {
  enable.moduleBinaries = true
}

params {

    help = false
    
    // *** Required parameters ***

    // data locations
    // - only for SRA data
    from_sra = false
    // - TODO: allow local FASTQ files
    sample_sheet = null
    sample_names = "sample_id"
    
    // reverse complement?
    rc = false
    guides = false

    // *** Optional parameters ***

    inputs = "inputs"
    outputs = "outputs"

    do_fitness = false
    use_umis = false

    guide_length = 20

    // guide sequences
    name_column = 'Name'
    sequence_column = 'guide_sequence'

    // data locations
    ncbi_api_key = 'f5b1dceea773296c6634439b7df13c09ad08'

    // adapter trimming with `cutadapt`
    trim_qual = 10
    min_length = 15

}

process.conda = "${projectDir}/environment.yml"
conda {
  createTimeout = '2h'
  enabled = true
}

profiles {

  standard {
    process {
      executor = 'slurm'
      // array = 1000

      withLabel: big_cpu {
        time = '3h'
        cpus = 16
        memory = 32.GB
      }

      withLabel: big_time {
        time = '7d'
        cpus = 1
        memory = 128.GB
      }

      withLabel: some_mem {
        memory = 16.GB
      }

      withLabel: med_mem {
        memory = 64.GB
      }

      withLabel: big_mem {
        memory = 128.GB
      }

      withLabel: gpu_single {
        queue = 'gpu'
        time = '7d'
        module = 'cuDNN/8.9.2.26-CUDA-12.1.1'
        cpus = 4
        clusterOptions = '--gres=gpu:1'
        memory = 128.GB
      }

      withLabel: gpu {
        queue = 'gpu'
        time = '4h'
        module = 'cuDNN/8.9.2.26-CUDA-12.1.1'
        cpus = 2
        clusterOptions = '--gres=gpu:2'
        memory = 128.GB
      }

    }

    dag {
      enabled = true
      overwrite = true
    }

    notification {
      enabled = true
      to = "$USER@crick.ac.uk"
    }

  }

  local {

    process {
      executor = 'local'

      withLabel: big_cpu {
        time = '3h'
        cpus = 16
        memory = 32.GB
      }

      withLabel: some_mem {
        memory = 8.GB
      }

      withLabel: med_mem {
        memory = 16.GB
      }

      withLabel: big_mem {
        memory = 32.GB
      }

      withLabel: gpu {
        memory = 32.GB
      }

    }

  }

  gh {

    conda.enabled = true
    process {
      executor = 'local'
      withLabel: big_cpu {
        time = '3h'
        cpus = 1
        memory = '12GB'
      }
      withLabel: med_mem {
          cpus = 1
          memory = '12GB'
      }
      withLabel: big_mem {
          cpus = 1
          memory = '12GB'
        }
      withLabel: big_gpu {
        cpus = 1
        memory = '12GB'
      }
    }
  }

}